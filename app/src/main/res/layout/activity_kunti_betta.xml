<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KuntiBetta"
    android:orientation="vertical"
    android:padding="22dp"
    android:background="@drawable/bc11">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kunti Betta â€“ For Some Excitement And Thrill"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/kunti"
        android:layout_marginTop="12dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        CardView_cardBackgroundColor="#ffffff"
        CardView_cardCornerRadius="18dp"
        CardView_cardElevation="5dp"
        CardView_cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With a cocktail of topography of rocky boulders, grasslands, and granite outcrops, Kunti Betta is one of the best trekking places near Bangalore known for night trekking. Overnight trekking near Bangalore in Kunti Betta is thrilling and worth the pain you take to trek it. People ascend at night and enjoy the most photogenic sunrise and stunning views of the surrounding paddy fields, forests and a sparkling lake."
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:padding="11dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance from Bangalore: 122 km"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="21dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highlights: Stunning view of Thonnur Lake"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="21dp"/>

            </LinearLayout>



        </LinearLayout>



    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Packages Details   "
            android:layout_marginTop="20dp"
            android:background="#2C8A29"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_details"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Click for Location    "
            android:layout_marginTop="20dp"
            android:background="#2C8A29"
            android:textColor="@color/white"
            android:id="@+id/btn_loc"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>
</LinearLayout>