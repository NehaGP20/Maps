<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NandiHills"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bc3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nandi Hills – Trek In Tipu Sultan’s Summer Retreat"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/nandi"
        android:layout_marginTop="12dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        CardView_cardBackgroundColor="#ffffff"
        CardView_cardCornerRadius="18dp"
        CardView_cardElevation="5dp"
        CardView_cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Located at an altitude of 1478 m, Nandi hills or Nandidurg is one of the most popular places for trekking near Bangalore. One can climb up 1,200 steps to reach the summer palace of Tipu Sultan located on the top. It is a mesmeric location and offers breathtaking views of the surrounding hills and Amrita Sarovar. One can practice rock climbing and rappelling from Tipu’s Drop – a famous rock outcrop of Nandi Hills."
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance between Nandi Hills and Bangalore: 60 km"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="21dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highlights: Most photogenic sunrise from Tipu’s drop (a rocky outcrop)"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="21dp"/>

            </LinearLayout>



        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Packages Details   "
            android:layout_marginTop="20dp"
            android:background="#2C8A29"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_details"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Click for Location    "
            android:layout_marginTop="20dp"
            android:background="#2C8A29"
            android:textColor="@color/white"
            android:id="@+id/btn_loc"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</LinearLayout>