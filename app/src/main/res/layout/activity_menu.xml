<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="@drawable/pic2"
    android:alpha="0.8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TREK WITH ME"
        android:fontFamily="@font/font2"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See  nearby  Trek "
        android:textSize="25dp"
        android:fontFamily="@font/font4"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:id="@+id/btn_choose"
        android:padding="24dp"
        android:textColor="@color/white"
        android:background="#BE3D9514"
        android:layout_marginTop="80dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent  Gear"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/font4"
            android:id="@+id/btn_choose1"
            android:padding="24dp"
            android:textColor="@color/white"
            android:background="#BE3D9514"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btn_see"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#BE3D9514"
            android:padding="24dp"
            android:fontFamily="@font/font4"
            android:text="Packing  guide"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>